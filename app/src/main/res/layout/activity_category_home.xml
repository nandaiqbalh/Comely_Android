<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.product.bycategory.CategoryHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="46dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Search Product"
            android:padding="10dp"
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/neutral_grey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:background="@color/neutral_color"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_love" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:background="@color/neutral_color"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_notification" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_full"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Sport and Life Style"
                    android:textColor="@color/neutral_dark"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageButton
                            android:id="@+id/cat_man_shirt"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/neutral_color"
                            android:src="@drawable/cat_man_shoes" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Sport Shoes"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageButton
                            android:id="@+id/cat_woman_bag"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/neutral_color"
                            android:src="@drawable/cat_man_t_shirt" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Sport Jersey"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageButton
                            android:id="@+id/cat_work_equipment"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/neutral_color"
                            android:src="@drawable/cat_work_equipment" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Man Bag"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageButton
                            android:id="@+id/cat_man_shoes"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/neutral_color"
                            android:src="@drawable/cat_man_shoes" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Man Shoes"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/neutral_color"
                            android:src="@drawable/cat_man_shoes" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Sport Shoes"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/neutral_color"
                            android:src="@drawable/cat_man_t_shirt" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Sport Jersey"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/neutral_color"
                            android:src="@drawable/cat_work_equipment" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Man Bag"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/neutral_color"
                            android:src="@drawable/cat_man_shoes" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Man Shoes"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>