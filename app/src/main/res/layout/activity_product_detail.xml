<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_color"
    tools:context=".activity.product.ProductDetailActivity"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_add_to_chart"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
                <ImageView
                    android:id="@+id/iv_gambar_product"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:src="@drawable/produk_sepatu_ortuseight_jogosalarampage"
                    android:background="@color/white"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/tv_nama_produk_detail"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:text="Nama Produk"
                        android:textSize="20sp"
                        android:textColor="@color/neutral_dark"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite_detail"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/tv_nama_produk_detail"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_star_yellow"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_star_yellow"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_star_yellow"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_star_yellow"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_star_neutral"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_harga_produk_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Rp 200.000"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Size"
                    android:textColor="@color/neutral_dark"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"/>

                <Spinner
                    android:id="@+id/spinner_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Color"
                    android:textColor="@color/neutral_dark"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"/>

                <Spinner
                    android:id="@+id/spinner_color"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specification"
                    android:textColor="@color/neutral_dark"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Product Brand"
                        android:textColor="@color/neutral_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Ortus Eight"
                        android:textColor="@color/neutral_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Product Code"
                        android:textColor="@color/neutral_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Ortus-01"
                        android:textColor="@color/neutral_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Product Description"
                        android:textColor="@color/neutral_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:maxLines="6"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                        android:textColor="@color/neutral_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>

                </LinearLayout>
                
            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_add_to_chart"
            android:layout_width="340dp"
            android:layout_height="57dp"
            android:layout_marginBottom="10dp"
            android:text="Add to Chart"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>