<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <EditText
            android:layout_width="250dp"
            android:layout_height="46dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Search Product"
            android:padding="10dp"
            android:textColor="@color/primary_blue"
            android:textColorHint="@color/neutral_grey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageButton
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:src="@drawable/ic_love"
            android:background="@color/neutral_color"
            />

        <ImageButton
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:src="@drawable/ic_notification"
            android:background="@color/neutral_color"
            />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <com.smarteist.autoimageslider.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:text="Category"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/neutral_dark"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="25dp"
                        android:text="More Category"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:layout_marginStart="150dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/cat_man_shirt"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/cat_man_shirt"
                            android:background="@color/neutral_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Man Shirt"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/cat_woman_bag"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/cat_woman_bag"
                            android:background="@color/neutral_color"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Woman Bag"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/cat_work_equipment"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/cat_work_equipment"
                            android:background="@color/neutral_color" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Man Bag"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/cat_man_shoes"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/cat_man_shoes"
                            android:background="@color/neutral_color"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Man Shoes"
                            android:textColor="@color/neutral_grey"
                            android:textSize="10dp"
                            android:gravity="center"
                            />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="128dp"
                        android:layout_height="25dp"
                        android:text="Featured Product"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/neutral_dark"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="See More"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:layout_marginStart="140dp"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_featured_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="128dp"
                        android:layout_height="25dp"
                        android:text="Hot Deals"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/neutral_dark"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="See More"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:layout_marginStart="140dp"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/rv_hotdeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/recommended_product"
                />

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="128dp"
                        android:layout_height="25dp"
                        android:text="Recomended"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/neutral_dark"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="See More"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary_blue"
                        android:textSize="14sp"
                        android:layout_marginStart="140dp"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/rv_recommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    
</LinearLayout>